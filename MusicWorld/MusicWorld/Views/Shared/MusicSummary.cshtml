@model Musics
<div class="card">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <h5 class="card-title">Author: @*@Model.Author.AuthorName*@</h5>
        <h5 class="card-title">Singer: @*@Model.Singer.SingerName*@</h5>
        <h5 class="card-title">Album:  @*@Model.Album.AlbumName*@</h5>
    </div>
    <form method="post" asp-page="/Play" id="@Model.Id">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" name="returnUrl"
               value="@ViewContext.HttpContext.Request.PathAnyQuery()" />
        <span class="card-text p-1">
            <button type="submit" class="btn btn-success btn-sm pull-right" style="float:right">
                Add To Cart
            </button>
        </span>
    </form>
</div>
