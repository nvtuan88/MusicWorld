@model Musics
<div class="card" style="width:100%;height:280px;background:rgba(255, 255, 255, 0.75)">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <h5 class="card-title font-weight-lighter">Author: @Model.Authors.AuthorName</h5>
        <h5 class="card-title font-weight-lighter" style="font-size:14px">Singer: @Model.Singers.SingerName</h5>
        <h5 class="card-title font-weight-lighter" style="font-size:14px">Album:  @Model.Albums.AlbumName</h5>
        <audio controls>
            <source src="@Model.Url" type="audio/mpeg" />
            Your browser does not support the audio element.
        </audio>
        <div class="card-text">
            <form method="post" asp-page="/Play" id="@Model.Id" style="position:absolute;bottom:0;right:0">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" name="returnUrl"
                       value="@ViewContext.HttpContext.Request.PathAnyQuery()" />
                <span class="col text-center">
                    <button type="submit" class="btn btn-success btn-sm">
                        Add To Playlist
                    </button>
                </span>
            </form>
        </div>
    </div>
</div>

