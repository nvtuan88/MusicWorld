@model IEnumerable<Admin.Models.Singer>

@{
    ViewData["Title"] = "Index";
}
<div class="_singer">
    <h1>Singer</h1>

    <p>
        <a class="btn-primary" asp-action="Create">Create New</a>
    </p>
    <table class="table table-responsive-sm table-hover table-outline mb-0">
        <thead class="thead-light">
            <tr>

                <th>Name</th>
                <th>Avatar</th>
                <th>Description</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.SingerName)
                    </td>
                    <td>
                        <div class="avatar">
                            <img class="img-avatar" src="@Html.DisplayFor(modelItem => item.SingerImg)">

                        </div>
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.DescriptionSinger)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>

                </tr>
            }
        </tbody>
    </table>

</div>

